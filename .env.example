# Real API Integration Environment Variables
# Copy this to .env.local and add your actual API keys

# eBay API Configuration
EBAY_APP_ID=your_ebay_app_id_here
EBAY_DEV_ID=your_ebay_dev_id_here
EBAY_CERT_ID=your_ebay_cert_id_here

# Google Shopping API Configuration  
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_custom_search_engine_id_here

# Shopify API Configuration (if you have a Shopify store)
SHOPIFY_STORE_NAME=your-store-name
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token_here

# Amazon Product Advertising API (future implementation)
AMAZON_ACCESS_KEY=your_amazon_access_key_here
AMAZON_SECRET_KEY=your_amazon_secret_key_here
AMAZON_ASSOCIATE_TAG=your_amazon_associate_tag_here

# Auto-start scheduled imports in production
AUTO_START_IMPORTS=false

# Import Configuration
DEFAULT_IMPORT_CATEGORIES="dress,shoes,shirt,pants,accessories,jacket"
DEFAULT_IMPORT_PLATFORMS="walmart,amazon,etsy"
DAILY_IMPORT_LIMIT=10
WEEKLY_IMPORT_LIMIT=20

# Affiliate Network APIs
COMMISSION_JUNCTION_API_KEY=your_cj_api_key_here
SHAREASALE_AFFILIATE_ID=your_shareasale_id_here
RAKUTEN_API_KEY=your_rakuten_api_key_here

# Search Configuration
USE_REAL_APIS=true
FALLBACK_TO_MOCK=true
API_CACHE_DURATION=300
MAX_SEARCH_RESULTS=50

# StyleLink Business Configuration
STYLELINK_SERVICE_FEE_PERCENT=3
AFFILIATE_COMMISSION_PERCENT=5
FREE_SHIPPING_THRESHOLD=75
