{
  "framework": "nextjs",
  "regions": ["iad1"],
  "build": {
    "env": {
      "SKIP_ENV_VALIDATION": "true",
      "PRISMA_HIDE_UPDATE_MESSAGE": "true",
      "NODE_ENV": "production"
    }
  },
  "installCommand": "npm install",
  "buildCommand": "next build",
  "functions": {
    "src/app/api/**": {
      "maxDuration": 30
    }
  },
  "ignoreCommand": "git diff --quiet HEAD~1 -- mobile/ && echo 'No mobile changes' && exit 1 || echo 'Changes detected'"
}
